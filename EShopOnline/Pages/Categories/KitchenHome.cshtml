@page
@model EShopOnline.Pages.Categories.KitchenHomeModel
@{
    ViewData["Title"] = "Kitchen & Home";
}

<div class="row">
    <div class="col-md-9">
        <h1>Kitchen & Home</h1>
        <p>Discover items for your home:</p>

        <div class="row">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-md-4 mb-4">
                    <div class="product-card">
                        <img src="https://via.placeholder.com/150" alt="Kitchen Item @i" class="img-fluid mb-3">
                        <h5>Kitchen Item @i</h5>
                        <p>$@(49.99 + i)</p>
                        <button class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>